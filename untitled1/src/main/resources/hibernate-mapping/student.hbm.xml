<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernateproject.Entity.Student" table="student">
        <!--id we use to declare primary key of a table-->
        <id name="studentId" column="stud_id">
            <generator class="increment"/>
        </id>
        <property name="studentName" column="student_name" length="255" type="java.lang.String"/>
        <property name="studentRollNumber" column="student_RollNumber" length="12" type="java.lang.Integer"/>
        <property name="subjectId" column="subject_id" length="12" type="java.lang.Double"/>

    </class>
</hibernate-mapping>